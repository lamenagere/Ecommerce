@model EcommerceMVC.Models.AccountModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-5">
    <div class="col-4 m-auto">
        <h5>Please enter your information to log in</h5>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row my-2">
                <div class="col-auto">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Login, "User Name")
                        @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, "Password")
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary form-control" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>